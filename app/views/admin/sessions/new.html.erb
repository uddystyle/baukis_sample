<% @title = 'ログイン' %>

<div id="login-form">
  <h1><%= @title %></h1>

  <%= form_for @form, url: :admin_session do |f| %>
      <div class="email-form">
        <%= f.label :email, 'メールアドレス' %>
        <%= f.text_field :email %>
      </div>
      <div class="password-form">
        <%= f.label :password, 'パスワード' %>
        <%= f.password_field :password %>
      </div>
      <div class="submit-form">
        <%= f.submit 'ログイン' %>
      </div>
  <% end %>
</div>